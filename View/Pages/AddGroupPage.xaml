<Page x:Class="EconomicTest.View.Pages.AddGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EconomicTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="700"
      Title="AddGroupPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Введите группу" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" 
                   HorizontalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="2" Name="NameGroupTB" Margin="5"/>
        <Button Content="Добавить" Grid.Column="1" Grid.Row="3" Name="AddBtn" Click="AddBtn_Click"/>
        <Button Content="Назад" Grid.Column="2" Grid.Row="3" Name="BackBTN" Click="BackBTN_Click"/>
    </Grid>
</Page>
