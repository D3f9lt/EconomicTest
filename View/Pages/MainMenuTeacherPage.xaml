<Page x:Class="EconomicTest.View.Pages.MainMenuTeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EconomicTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="700"
      Title="MainMenuTeacherPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="AddStudent" Content="Добавить студента" Width="250" Height="40" Margin="10" Click="AddStudent_Click"/>
            <Button Name="AddGroup" Content="Добавить группу" Width="250" Height="40" Margin="10" Click="AddGroup_Click"/>
            <Button Name="ListStudent" Content="Список студентов" Width="250" Height="40" Margin="10" Click="ListStudent_Click"/>
            <Button Name="DeleteStudent" Content="Удалить  студента" Width="250" Height="40" Margin="10" Click="DeleteStudent_Click"/>
            <Button Name="Out" Content="Выйти с гланого меню" Width="250" Height="40" Margin="10" Click="Out_Click"/>
        </StackPanel>
    </Grid>
</Page>
