<Page x:Class="EconomicTest.View.Pages.Test1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EconomicTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="700"
      Title="Test1Page">

    <Grid>
        <TabControl Name="products">
            <TabItem Name="v1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">1</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="Пути формирования отраслей промышленности:" FontSize="25"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="1 выделение отраслей промышленности из других отраслей национального хозяйства;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="2 углубление специализации в самой промышленности;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="3 развитие концентрации в промышленности;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="4 расширение комбинирования в промышленности;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="5 научно-технический прогресс;" FontSize="15"/>
                        <TextBox Name="TextBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Width="75" Height="22"/>
                        <Button Name="p1" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Width="75" Height="22" Click="p1_Click" />
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            
            <TabItem Name="v2">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">2</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Принцип, лежащий в основе деления промышленной продукции на группы А и Б:" FontSize="25"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" FontSize="20" Content="назначение производимой продукции;"/>
                        <RadioButton Name="RB2" Margin="10" HorizontalAlignment="Left" Content="фактическое использование продукции;" FontSize="20"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" Content="общность основного сырья;" FontSize="20"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" Content="сложность технологических процессов." FontSize="20"/>
                        <Button Name="p2" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p2_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">3</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Отраслевая структура промышленности характеризуется:" FontSize="20"/>
                        <CheckBox Name="CHB1" Margin="10" HorizontalAlignment="Left" Content="долей продукции отрасли в общем выпуске продукции;" FontSize="15"/>
                        <CheckBox Name="CHB2" Margin="10" HorizontalAlignment="Left" Content="долей основных фондов отрасли в общем объеме основных фондов промышленности;"
                                  FontSize="15"/>
                        <CheckBox Name="CHB3" Margin="10" HorizontalAlignment="Left" Content="долей оборотных фондов в общем объеме оборотных фондов промышленности;"
                                  FontSize="15"/>
                        <CheckBox Name="CHB4" Margin="10" HorizontalAlignment="Left" Content="долей работников, занятых в отрасли, в общей численности работников промышленности;"
                                  FontSize="15"/>
                        <CheckBox x:Name="CHB5" Margin="10" HorizontalAlignment="Left" Content="долей прибыли отрасли в общей прибыли промышленности;" FontSize="15"/>
                        <Button Name="p3" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="22" Click="p3_Click" 
                                FontSize="15"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v4">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">4</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="К основным напрвлениям научно-технического прогресса в промышленности относятся:" FontSize="15.8"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="1 электрофикация промышлености;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="2 комплексная механизация, автоматизация и компьютеризация промышлености;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="3 специализация промышленности;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="4 химизация промышленности;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="5 1,2,4;" FontSize="15"/>
                        <TextBox Name="TextBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Width="75" Height="22"/>
                        <Button Name="p4" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Width="75" Height="22" Click="p4_Click" />
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v5">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">5</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="Какой тип производства является наиболее эффективным с точки зрения минимизации издержек производства:" 
                                   FontSize="18" TextWrapping="Wrap"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="1 индивидуальное производство;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="2 комплексная механизация, автоматизация и компьютеризация промышлености;" 
                                   FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="3 специализация промышленности;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="4 химизация промышленности;" FontSize="15"/>
                        <TextBlock Margin="5" HorizontalAlignment="Left" Text="5 1,2,4;" FontSize="15"/>
                        <TextBox Name="TextBox3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Width="75" Height="22"/>
                        <Button Name="p5" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Width="75" Height="22" 
                                Click="p5_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

        </TabControl>
    </Grid>
</Page>
