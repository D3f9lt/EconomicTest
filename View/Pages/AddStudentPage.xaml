<Page x:Class="EconomicTest.View.Pages.AddStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EconomicTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="700"
      Title="AddStudentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Введите ФИО" Grid.Row="1" Grid.Column="1"/>
        <TextBlock Text="Группа" Grid.Row="3" Grid.Column="1"/>

        <TextBox x:Name="FioTB" Grid.Row="1" Grid.Column="3"/>
        <ComboBox Name="GroupCMB" Grid.Row="3" Grid.Column="3"/>

        <Button Content="Добавить" Grid.Row="5" Grid.Column="1" Name="Add" Click="Add_Click"/>
        <Button Content="Назад" Grid.Column="3" Grid.Row="5" Name="Back" Click="Back_Click"/>
    </Grid>
</Page>
