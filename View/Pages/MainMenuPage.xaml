<Page x:Class="EconomicTest.View.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EconomicTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="700"
      Title="MainMenuPage">

    <Grid>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Тест по дисциплине" FontSize="40" Margin="10"/>
            <TextBlock Text="Экономика отрасли" FontSize="40" Padding="20"/>
            <Button Name="Teacher" Content="Преподаватель" FontSize="25" Margin="5" Click="Teacher_Click"/>
            <Button Name="Student" Content="Студент" FontSize="25" Margin="5" Click="Student_Click"/>
        </StackPanel>
    </Grid>
</Page>
