<Page x:Class="EconomicTest.View.Pages.TeacherSignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EconomicTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="700"
      Title="TeacherSignInPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Светлана Дмитриевна, введите пароль" FontSize="30" Padding="30"/>
            <PasswordBox Name="PasswordTeacherPB" Width="400" Height="30"/>
            <Button Name="OK" Content="OK" Width="100" Height="30" Click="OK_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
