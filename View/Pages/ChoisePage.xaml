<Page x:Class="EconomicTest.View.Pages.ChoisePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EconomicTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="700"
      Title="ChoisePage">

    <Grid>
        <StackPanel x:Name="StackPanel1" Orientation="Vertical" Margin="250 20 250 20">
            <TextBlock Text="Выберите группу" FontSize="20"/>
            <ComboBox Name="GroupCmb" FontWeight="Bold" FontSize="20" SelectionChanged="GroupCmb_SelectionChanged"/>
            <TextBlock Text="Выберите студента" FontSize="20"/>
            <ComboBox Name="StudentCmb" FontWeight="Bold" FontSize="20"/>
            <TextBlock Text="Выберите тест" FontSize="20"/>
            <ComboBox Name="TestCmb" FontWeight="Bold" FontSize="20"/>
            <Button Content="Начать" Name="StartBtn" FontSize="20" FontWeight="Bold" Margin="10 30 10 10" Click="StartBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
